<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.wackaloon.gdgexampleoctober2019">

    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application
            android:name="com.wackaloon.gdgexampleoctober2019.MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name="com.wackaloon.gdgexampleoctober2019.mainscreen.framework.mvp.MainScreenActivity"
                android:label="First screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name="com.wackaloon.gdgexampleoctober2019.secondscreen.framework.SecondScreenActivity"
                android:label="Second screen" />
    </application>

</manifest>
